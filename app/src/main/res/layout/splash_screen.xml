        android:shadowRadius="10"
        android:textColor="#03A9F4"
        android:textSize="49sp"
        android:text="WeatherApp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
